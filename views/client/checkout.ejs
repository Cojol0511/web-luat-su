    <section id="checkOut">
        <div class="container-fluid">

            <div class="row mt-5">

                <div class="col-md-7 col-lg-8">
                    <!-- Checkout Form -->
                    <form id="cp_form" action="/booking-success?LawyerID=<%= lawyer.LawyerID%>&UserID=<%= user %>" method="POST">
                        <div class="card">
                            <div class="card-body">
                                
                                    <!-- Personal Information -->
                                    
                                    <div class="info-widget">
                                        <h4 class="card-title">Thông tin cá nhân</h4>
                                        <div class="row">
                                            <div hidden class="form-group">
                                                <label>Họ và tên Luật sư</label>
                                                <input class="form-control" name="Lawyer_FullName" type="text" value="<%= lawyer.FullName; %>" >
                                            </div>
                                            <div hidden class="form-group">
                                                <label>Email Luật sư</label>
                                                <input class="form-control" name="Lawyer_Email" type="text" value="<%= lawyer.Email; %>" >
                                            </div>
                                            <div hidden class="form-group">
                                                <label>Số điện thoại Luật sư</label>
                                                <input class="form-control" name="Lawyer_PhoneNumber" type="text" value="<%= lawyer.PhoneNumber; %>" >
                                            </div>                                            
                                            <div class="col-md-6 col-sm-12">
                                                <div class="form-group card-label">
                                                    <label>Họ và tên </label>
                                                    <input class="form-control" name="Name" type="text" value="<%= userInfo.Name; %>" >
                                                </div>
                                            </div>
                                            <div class="col-md-6 col-sm-12">
                                                <div class="form-group card-label">
                                                    <label>Email</label>
                                                    <input class="form-control" name="Email" type="email" value="<%= userInfo.Email; %>">
                                                </div>
                                            </div>
                                            <div class="col-md-6 col-sm-12">
                                                <div class="form-group card-label">
                                                    <label>Điện thoại</label>
                                                    <input class="form-control" name="PhoneNumber" type="text" value="<%= userInfo.PhoneNumber; %>">
                                                </div>
                                            </div>
                                             <div class="col-md-3 col-sm-12">
                                                <div class="form-group card-label">
                                                    <label>Ngày đặt hẹn</label>
                                                    <input class="form-control" name="Date" type="date" value="<%= userInfo.Date; %>" readonly="readonly">
                                                </div>
                                            </div>
                                            <div class="col-md-3 col-sm-12">
                                                <div class="form-group card-label">
                                                    <label>Giờ đặt hẹn</label>
                                                    <input class="form-control" name="Time" type="text" value="<%= userInfo.Time; %>" readonly="readonly">
                                                </div>
                                            </div>
                                        </div>
                                        <!--
                                        <div class="exist-customer">Existing Customer? <a href="checkout.html#">Click here to login</a></div> -->
                                    </div>
        
                                    <!-- /Personal Information -->
                                    
                                    <div class="payment-widget">
                                        <h4 class="card-title">Phương thức thanh toán</h4>
                                        
                                        <!-- Credit Card Payment -->
                                        <div class="payment-list form-group">
                                            <label class="payment-radio credit-card-option">
                                                <input id="cp_credit" type="radio" name="radio" value="1" required oninvalid="this.setCustomValidity('Vui lòng chọn phương thức thanh toán')" oninput="setCustomValidity('')">
                                                <span class="checkmark"></span>
                                                Thẻ tín dụng
                                            </label>

                                        <!-- /Credit Card Payment -->
                                        
                                        <!-- Paypal Payment -->
                                        <div class="payment-list form-group">
                                            <label class="payment-radio paypal-option">
                                                <input id="cp_momo"  type="radio" name="radio"  value="2">
                                                <span class="checkmark"></span>
                                                Ví MOMO
                                            </label>
                                        </div>
                                        <!-- /Paypal Payment -->

                                        <!-- Credit Card Payment -->
                                        <div class="payment-list form-group">
                                            <label class="payment-radio credit-card-option">
                                                <input id="cp_transfer" type="radio" name="radio" value="3">
                                                <span class="checkmark"></span>
                                                Thanh toán chuyển khoản
                                            </label>
                                        </div>
                                        <!-- /Credit Card Payment -->
                                        <!-- Terms Accept -->
                                        <div class="terms-accept form-group">
                                            <div class="custom-checkbox">
                                               <input type="checkbox" id="terms_accept" required oninvalid="this.setCustomValidity('Vui lòng đọc và đồng ý với các điều khoản')" oninput="setCustomValidity('')">
                                               <label for="terms_accept">Tôi đã đọc và đồng ý với các <a href="#">Điều kiện &amp; Điều khoản</a></label>
                                            </div>
                                        </div>
                                        <!-- /Terms Accept -->
                                        
                                        <!-- Submit Section -->
                                        <div id="cp_message"></div>
                                        <div class="submit-section mt-4">
                                            <button type="submit" class="btn btn-primary submit-btn">Xác nhận thanh toán</button>
                                        </div>
                                        <!-- /Submit Section -->
                                        
                                    </div>
                                
                                <!-- /Checkout Form -->
                                
                            </div>
                        </div>
                    </form>
                </div>
                            
                <div class="col-md-5 col-lg-4 theiaStickySidebar">
                
                    <!-- Booking Summary -->
                    <div class="card booking-card">
                        <div class="card-header">
                            <h4 class="card-title">Thông tin thanh toán</h4>
                        </div>
                        <div class="card-body">
                        
                            <!-- Booking Mentee Info -->
                            <div class="booking-user-info">
                                <a href="#" class="booking-user-img">
                                    <img src="<%= lawyer.Avatar %>" alt="User Image">
                                </a>
                                <div class="booking-info">
                                    <h4><a href="/lawyer/profile?lawyerID=<%= lawyer.LawyerID %>"> <%= lawyer.FirstName %> <%= lawyer.LastName %></a></h4>
                                    <%
                                            var specialize;
                                            switch (lawyer.Specialize){
                                            case '1':
                                                specialize = "Hình sự";
                                                break;
                                            case '2':
                                                specialize = "Dân sự";
                                                break;
                                            case '3':
                                                specialize = "Kinh doanh thương mại";
                                                break;
                                            default:
                                                specialize = "khác";
                                                break;                          
                                            }
                                    %>                                    
                                    <div class="mentor-details">
                                        <p class="text-muted mb-0"><i class="fas fa-id-card-alt"></i> Lĩnh vực <%= specialize %></p>
                                        <p class="user-location"><i class="fas fa-map-marker-alt"></i> <%= lawyer.District %>, <%= lawyer.Province %> </p>
                                    </div>
                                </div>
                            </div>
                            <!-- Booking Mentee Info -->
                            
                            <div class="booking-summary">
                                <div class="booking-item-wrap">
                                    <ul class="booking-date">
                                        <li>Ngày hẹn <span> <%= userInfo.Date %> </span></li>
                                        <li>Giờ hẹn <span> <%= userInfo.Time %> </span></li>
                                    </ul>
                                    <ul class="booking-fee">
                                        <li>Phí luật sư <span>100,000 VNĐ</span></li>
                                        <li>Phí dịch vụ <span>50,000 VNĐ</span></li>
                                        <li>Thuế <span>0 VNĐ</span></li>
                                    </ul>
                                    <div class="booking-total">
                                        <ul class="booking-total-list">
                                            <li>
                                                <span>Tổng cộng</span>
                                                <span class="total-cost">150,000 VNĐ</span>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- /Booking Summary -->
                    
                </div>
            </div>

        </div>        
    </section>
<!--end code-->


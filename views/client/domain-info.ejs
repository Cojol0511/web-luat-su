<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Lĩnh vực | My Lawyer</title>

    <%- include('partials/head.ejs'); -%>
  </head>

  <body>
    <!-- ======= Header ======= -->
    <%- include('partials/header.ejs'); -%>
    <!-- End Header -->

    <!-- ======= Hero Section ======= -->
    <section
      id="hero"
      class="d-flex flex-column justify-content-center align-items-center"
    >
      <div class="container text-center" data-aos="fade-up">
        <h1>
          <span> Lĩnh vực <%= domain.Name %> </span>
        </h1>
        <h2>
          We are team of talanted designers making websites with Bootstrap
        </h2>
      </div>
    </section>
    <!-- <section id="hero" class="d-flex flex-column justify-content-center align-items-center">
    <div class="container text-center" data-aos="fade-up">
    <h1><span><%= domain.Name %></span></h1>
    </div>
    </section> -->
    <!-- End Hero -->

    <main id="main">
      <!-- ======= About Section ======= -->
      <section id="about" class="about">
        <div class="container">
          <div class="row">
            <!-- Top Left -->
            <div class="col-md-8">
              <div class="domain">
                <div class="domain-title">
                  <div class="section-title">
                    <h2>Giới Thiệu Luật <%= domain.Name %></h2>
                  </div>
                  <img
                    src="/client/assets/img/domain/<%=domain.DomainID%>.png"
                    class="img-fluid"
                    alt=""
                  />
                </div>

                <div class="domain-content"></div>

                <div class="domain-footer text-right">
                  <a href="/news" class="btn btn-warning">
                    Xem Thêm &rang;&rang;
                  </a>
                </div>
              </div>
            </div>
            <!-- Top Right -->
            <div class="col-md-4">
              <div class="domain-content">
                <div class="domain-content-container">
                  <input
                    style="padding: 3%"
                    class="form-control mr-sm-2 px-2"
                    type="search"
                    placeholder="Tìm kiếm"
                    aria-label="Search"
                  />
                </div>
              </div>

              <div class="domain-content">
                <div class="domain-subtitle">
                  <h4><strong>Hỏi Đáp</strong></h4>
                </div>
              </div>

              <div class="domain-content">
                <div class="domain-post-list">
                  <% if(postList != null && typeof postList != 'undifined') {%>
                  <% for(var post of postList) {%>
                  <p>
                    <a href="/post-detail/<%= post.PostID%>">
                      &middot; <%= post.Title%>
                    </a>
                  </p>
                  <% } %> <% } %>

                  <div class="text-right">
                    <a href="/news" class="btn btn-warning">
                      Xem Thêm &rang;&rang;
                    </a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>

      <section id="team" class="team">
        <div class="container">
          <div class="row">
            <!-- Bottom Left -->
            <div class="col-md-8">
              <div class="domain-content" style="height: 100%">
                <h3>Lựa chọn luật sư</h3>
                <div class="row">
                  <div class="col-md-12">
                    <div class="owl-carousel field-slider">
                      <% for (var i=0; i < lawyer_list.length; i++) {
                      other_lawyer = lawyer_list[i]; %>
                      <div class="col-md-12 d-flex align-items-stretch">
                        <div class="member">
                          <img
                            src='<%= other_lawyer.Avatar?other_lawyer.Avatar : "/client/uploads/avatar/default.png" %>'
                            alt=""
                          />
                          <h6>
                            <a
                              href="/lawyerList?lawyerID=<%= other_lawyer.LawyerID %>"
                            >
                              LS. <%= other_lawyer.FirstName %> <%=
                              other_lawyer.LastName %>
                            </a>
                          </h6>

                          <!--
                                                <div class="social">
                                                <a href=""><i class="icofont-twitter"></i></a>
                                                <a href=""><i class="icofont-facebook"></i></a>
                                                <a href=""><i class="icofont-instagram"></i></a>
                                                <a href=""><i class="icofont-linkedin"></i></a>
                                                </div>
                                                -->
                        </div>
                      </div>
                      <% } %>
                    </div>
                  </div>
                </div>
                <!--
                            <div class="domain-footer text-right">
                                <a href='#' class='btn btn-warning'>
                                    Xem Thêm &rang;&rang;
                                </a>
                            </div>
                            -->
              </div>
            </div>
            <!-- Bottom Right -->
            <div class="col-lg-4">
              <div
                class="domain-content text-center justify-content-center"
                style="height: 100%"
              >
                <h3 style="margin: 25% 0">
                  Liên hệ đến tổng đài để được tư vấn (hotline)
                  <br />0123456789
                </h3>
              </div>
            </div>
          </div>
        </div>
      </section>
      <!-- End About Section -->
    </main>
    <!-- End #main -->

    <!-- ======= Footer ======= -->
    <%- include('partials/footer.ejs'); -%>
    <!-- End Footer -->

    <a href="#" class="back-to-top"><i class="icofont-simple-up"></i></a>

    <!-- Vendor JS Files -->
    <script src="/client/assets/vendor/jquery/jquery.min.js"></script>
    <script src="/client/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="/client/assets/vendor/jquery.easing/jquery.easing.min.js"></script>
    <script src="/client/assets/vendor/php-email-form/validate.js"></script>
    <script src="/client/assets/vendor/waypoints/jquery.waypoints.min.js"></script>
    <script src="/client/assets/vendor/counterup/counterup.min.js"></script>
    <script src="/client/assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>
    <script src="/client/assets/vendor/venobox/venobox.min.js"></script>
    <script src="/client/assets/vendor/owl.carousel/owl.carousel.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/granim/2.0.0/granim.min.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
      integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
      crossorigin="anonymous"
    ></script>

    <!-- Template Main JS File -->

    <script src="/client/assets/js/main.js"></script>
  </body>
</html>

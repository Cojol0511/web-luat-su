<!DOCTYPE html>
<html lang="en">

<head>
    <title>Posts | Dashboard</title>

    <%- include('partials/head.ejs'); -%>
    <style>
        .text-center {
            text-align: center;
        }
    </style>
</head>

<body>

    <!-- Navbar -->
    <%- include('partials/nav.ejs'); -%>

    <!-- Breadscrumb -->
    <%- include('partials/breadcrumb.ejs', { site_name: 'Danh sách bài viết' , edit_flag: false }); -%>

    <section id="main">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div hidden class="alert alert-info" role="alert" id="alert-div"></div>
                </div>
                <div class="col-md-7">
                    <!-- Website Overview -->
                    <div class="panel panel-default panel-table">
                        <div class="panel-heading main-color-bg">
                            <div class="row">
                                <div class="col col-xs-6">
                                  <h3 class="panel-title">Danh sách Lĩnh Vực</h3>
                                </div>
                            </div>
                        </div>
                        <div class="panel-body">
                            <table class="table table-striped table-hover table-list">
                                <thead>
                                    <tr>
                                        <th class="" style="text-align: center">
                                            <input type="checkbox" id="parent" onclick="toggleCheckbox()">
                                        </th>
                                        <th class="" style="text-align: center">ID</th>
                                        <th class="" style="text-align: center">Tên</th>
                                        <th class="" style="text-align: center"><em class="glyphicon glyphicon-cog"></em></th>
                                    </tr>
                                </thead>
                            <tbody>
                                <% for(Domain of DomainList) { %>
                                    <tr>
                                        <td class="text-center">
                                            <input type="checkbox" id="child">
                                        </td>
                                        <td style="text-align: center" name="id"><%= Domain.DomainID %></td>
                                        <td style="text-align: center" name="name" id="domain-id-<%= Domain.DomainID %>">
                                            <%= Domain.Name %>
                                        </td>
                                        <td style="text-align:center;">
                                            <a
                                                class="btn btn-default glyphicon glyphicon-pencil"
                                                type="text"
                                                name="edit-btn"
                                                onclick="showInfo('<%= Domain.DomainID %>', '<%= Domain.Name %>')">     
                                            </a>
                                            <a class="btn btn-danger glyphicon glyphicon-trash" data-toggle="modal" data-target="#del-domain-<%= Domain.DomainID %>"><em class="fa fa-trash"></em></a>
                                        </td>
                                        <%- include('partials/del-domain-modal.ejs', { Domain: Domain }); %>
                                    </tr>
                                <% } %>
                            </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="col-md-5">
                    <div class="panel-heading main-color-bg">
                        <h3 class="panel-title">Chi Tiết</h3>
                    </div>
                    <div class="panel panel-default">
                        <div>
                            <ul class="nav nav-tabs">
                                <li class="active">
                                    <a data-toggle="tab" href="#area-detail">Thông tin chung</a>
                                </li>
                            </ul>
                        </div>
                        
                        <div class="tab-content">
                            <div id="area-detail" class="tab-pane fade in active">
                                <form id="area-info" action="" method="PUT">
                                    <div class="form-group">
                                        <label>ID</label>
                                        <input id="selected-id" readonly type="text" class="form-control" placeholder="ID" value="">
                                    </div>
                                    <div class="form-group" id="email">
                                        <label>Tên</label>
                                        <input id="selected-name" readonly type="text" class="form-control" placeholder="Tên" value="">
                                    </div>
                                </form>
                                <div class="form-group">
                                    <button disabled
                                        id="submit-btn"
                                        type="button"
                                        class="btn btn-md btn-primary"
                                        onclick="update()"
                                    >Cập nhật</button>
                                    <button disabled
                                        id="cancel-btn"
                                        type="button"
                                        class="btn btn-md btn-danger"
                                        onclick="reset()"
                                    >Hủy</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <%- include('partials/footer.ejs'); -%>

    <!-- Bootstrap core JavaScript -->
    <script src="http://cdn.ckeditor.com/4.6.2/standard/ckeditor.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="/admin/js/bootstrap.min.js"></script>
    <script src="/admin/js/dataTable.js"></script>
    <script src="/admin/js/practice_areas.js"></script>
</body>

</html>
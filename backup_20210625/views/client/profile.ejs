<!DOCTYPE html>
<html lang="en">

<head>

  <title>Thông tin người d | My Lawyer</title>

  <%- include('partials/head.ejs'); -%>

  <link rel="stylesheet" href="/client/assets/css/profile.css">

  
</head>

<body>

  <!-- ======= Header ======= -->
  <%- include('partials/header.ejs'); -%>
  <!-- End Header -->

  <!-- ======= Hero Section ======= -->

  <section id="hero" class="d-flex flex-column justify-content-center align-items-center">
    <div class="container text-center" data-aos="fade-up">
      <h1><span>Thông tin người dùng</span></h1>
      <h2>We are team of talanted designers making websites with Bootstrap</h2>
    </div>
  </section>

  <!-- End Hero -->

  <main id="main">

    <!--Start code-->
    <section id="userprofile">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-xl-10">

            <!-- Mentor Widget -->
            <div class="card">
              <div class="card-body">
                <div class="mentor-widget">
                  <div class="user-info-left align-items-center">
                    <div class="mentor-img d-flex flex-wrap justify-content-center">
                      <div class="">
                        <img src="<%= lawyer.Avatar %>" class="img-fluid" alt="">
                      </div>
                      <!--
                      <div class="rating text-center">
                        <i class="fa fa-star filled"></i>
                        <i class="fa fa-star filled"></i>
                        <i class="fa fa-star filled"></i>
                        <i class="fa fa-star filled"></i>
                        <i class="fa fa-star"></i>
                      </div>
                      -->
                      <div class="mentor-details m-0">
                        <p class="user-location m-0"><i class="fas fa-map-marker-alt"></i> <%= lawyer.Province %>, Việt Nam</p>
                      </div>
                    </div>
                    <div class="user-info-cont">
                      <h4 class="usr-name">LS. <%= lawyer.FirstName %> <%= lawyer.LastName %> </h4>
                      <%
                      var specialize;
                      switch (lawyer.Specialize){
                        case 1:
                          specialize = "Hình sự";
                          break;
                        case 2:
                          specialize = "Dân sự";
                          break;
                        case 3:
                          specialize = "Kinh doanh thương mại";
                          break;
                        default:
                          specialize = "Khác";
                          break;                          
                      }%>
                      <p class="mentor-type">
                        Lĩnh vực <%= specialize %>
                      </p>
                      <div class="mentor-action">
                        <p class="mentor-type social-title">Thông tin liên hệ</p>
                        <a href="javascript:void(0)" class="btn-blue">
                          <i class="fa fa-comments"></i>
                        </a>
                        <a href="javascript:void(0)" class="btn-blue">
                          <i class="fa fa-envelope"></i>
                        </a>
                        <a href="javascript:void(0)" class="btn-blue" data-toggle="modal" data-target="#voice_call">
                          <i class="fa fa-phone"></i>
                        </a>
                      </div>
                    </div>
                  </div>
                  <div class="user-info-right d-flex align-items-end flex-wrap">
                    <div class="hireme-btn text-center">
                      <span class="hire-rate"><%= lawyer.Fee %> VNĐ/Giờ</span>
                      <a class="blue-btn-radius" href="/booking?LawyerID=<%= lawyer.LawyerID %>">Liên hệ ngay</a>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <!-- /Mentor Widget -->
            
            <!-- Mentor Details Tab -->
            <div class="card">
              <div class="card-body custom-border-card pb-0">
              
                <!-- About Details -->
                <div class="widget about-widget custom-about mb-0">
                  <h4 class="widget-title">Giới thiệu</h4>
                  <hr/>
                  <p> <%= lawyer.Degree %> </p>
                </div>
                <!-- /About Details -->
              </div>
            </div>

            <div class="card">
              <div class="card-body custom-border-card pb-0">

                <!-- Personal Details -->
                <div class="widget education-widget mb-0">
                  <h4 class="widget-title">Thông tin chung</h4>
                  <hr/>
                  <div class="experience-box">
                    <ul class="experience-list profile-custom-list">
                      <li>
                        <div class="experience-content">
                          <div class="timeline-content">
                            <span>Giới tính</span>
                            <%  var gender;
                                switch (lawyer.Gender){
                                case 1:
                                    gender = "Nam";
                                    break;
                                case 2:
                                    gender = "Nữ";
                                    break;
                                default:
                                    gender = "Khác";
                                    break;
                               }
                            %>
                            <div class="row-result"><%= gender %></div>
                          </div>
                        </div>
                      </li>
                      <li>
                        <div class="experience-content">
                          <div class="timeline-content">
                            <span>Điện thoại</span>
                            <div class="row-result"><%= lawyer.PhoneNumber %></div>
                          </div>
                        </div>
                      </li>
                      <li>
                        <div class="experience-content">
                          <div class="timeline-content">
                            <span>Năm sinh</span>
                            <div class="row-result"><%= lawyer.DoB %></div>
                          </div>
                        </div>
                      </li>
                    </ul>
                  </div>
                </div>
                <!-- /Personal Details -->

              </div>
            </div>

            <div class="card">
              <div class="card-body custom-border-card pb-0">

                <!-- Qualification Details -->
                <div class="widget experience-widget mb-0">
                  <h4 class="widget-title">Kinh nghiệm</h4>
                  <hr/>
                  <div class="experience-box">
                    <ul class="experience-list profile-custom-list">
                      <li>
                        <div class="experience-content">
                          <div class="timeline-content">
                            <span>Cơ quan</span>
                            <div class="row-result"><%= lawyer.experiences[0].Company %></div>
                          </div>
                        </div>
                        <div class="experience-content">
                          <div class="timeline-content">
                              <span>Chức danh</span>
                              <div class="row-result"><%= lawyer.experiences[0].PostName %></div>
                          </div>
                        </div>
                      </li>
                      <li>
                        <div class="experience-content">
                          <div class="timeline-content">
                            <span>Trình độ</span>
                            <%  var degreetype;
                                switch (lawyer.formations[0].DegreeType){
                                  case '1':
                                    degreetype = "Cao đẳng";
                                    break;
                                  case '2':
                                    degreetype = "Đại học";
                                    break;  
                                  case '3':
                                    degreetype = "Thạc sỹ";
                                    break; 
                                  case '4':
                                    degreetype = "Tiến sỹ";
                                    break;  
                                  default:
                                    degreetype = "Khác";
                                    break;                               
                                }
                            %>
                            <div class="row-result"><%= degreetype %></div>
                          </div>
                        </div>
                      </li>
                      <li>
                        <div class="experience-content">
                          <div class="timeline-content">
                            <span>Chuyên ngành</span>
                            <div class="row-result"><%= specialize %></div>
                          </div>
                        </div>
                      </li>
                    </ul>
                  </div>
                </div>
                <!-- /Qualification Details -->

              </div>
            </div>

            <div class="card">
              <div class="card-body pb-1 custom-border-card">

                <!-- Location Details -->
                <div class="widget awards-widget m-0">
                  <h4 class="widget-title">Địa chỉ văn phòng</h4>
                  <hr/>
                  <div class="experience-box">
                    <ul class="experience-list profile-custom-list">
                      <li>
                        <div class="experience-content">
                          <div class="timeline-content">
                            <span>Địa chỉ </span>
                            <div class="row-result"><%= lawyer.Street %></div>
                          </div>
                        </div>
                      </li>
                      <li>
                        <div class="experience-content">
                          <div class="timeline-content">
                            <span>Quận</span>
                            <div class="row-result"><%= lawyer.District %></div>
                          </div>
                        </div>
                      </li>
                      <li>
                        <div class="experience-content">
                          <div class="timeline-content">
                            <span>Thành phố</span>
                            <div class="row-result"><%= lawyer.Province %></div>
                          </div>
                        </div>
                      </li>
                      <li>
                        <div class="experience-content">
                          <div class="timeline-content">
                            <span>Quốc gia</span>
                            <div class="row-result">Việt Nam</div>
                          </div>
                        </div>
                      </li>
                      <li>
                        <div class="experience-content">
                          <div class="timeline-content">
                            <span>Mã bưu chính</span>
                            <div class="row-result"><%= lawyer.Zipcode %></div>
                          </div>
                        </div>
                      </li>
                    </ul>
                  </div>
                </div>
                <!-- /Location Details -->
              </div>
            </div>
            <!-- /Mentor Details Tab -->

          </div>
        </div>
      </div>
        
    </section>
<!--end code-->

  </main><!-- End #main -->

  <!-- ======= Footer ======= -->
  <%- include('partials/footer.ejs'); -%>
  <!-- End Footer -->

  <a href="#" class="back-to-top"><i class="icofont-simple-up"></i></a>

  <!-- Vendor JS Files -->
  <script src="/client/assets/vendor/jquery/jquery.min.js"></script>
  <script src="/client/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
  <script src="/client/assets/vendor/jquery.easing/jquery.easing.min.js"></script>
  <script src="/client/assets/vendor/php-email-form/validate.js"></script>
  <script src="/client/assets/vendor/waypoints/jquery.waypoints.min.js"></script>
  <script src="/client/assets/vendor/counterup/counterup.min.js"></script>
  <script src="/client/assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>
  <script src="/client/assets/vendor/venobox/venobox.min.js"></script>
  <script src="/client/assets/vendor/owl.carousel/owl.carousel.min.js"></script>


  <script src="https://cdnjs.cloudflare.com/ajax/libs/granim/2.0.0/granim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>

  <!-- Template Main JS File -->
  
  <script src="/client/assets/js/main.js"></script>

</body>

</html>
<!-- Modals -->
<!-- Add Lawyer -->
<div class="modal fade" id="addLawyer" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form id="lr_registerForm" action="/admin/register/addLawyer"  class="well"  method="POST">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                            aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Thêm Luật sư</h4>
                </div>
                <div class="modal-body">  
                    <div id="lr_message"></div>
                    <p> Các thông tin có dấu <span style="color: red">*</span> là bắt buộc.</p>
                    <div class="form-group">
                        <label>Địa chỉ Email <span style="color: red">*</span></label>
                        <input id="lr_email" type="text" name="Email" class="form-control" onchange="email_validate(this.value);" placeholder="Nhập địa chỉ email">
                        <div class="status" id="lr_status"></div>
                    </div>
            
                    <div class="form-group">
                      <label>Tên đăng nhập <span style="color: red">*</span></label>
                      <input id="lr_username" type="text" name="UserName" class="form-control" onkeyup = "Validate(this)" placeholder="Nhập tên đăng nhập">
                    </div>

                    <div class="form-group">
                        <label>Số điện thoại</label>
                        <input id="lr_phonenumber" type="text" name="PhoneNumber" class="form-control" maxlength="12" onkeyup="validatephone(this);" placeholder="Nhập số điện thoại">
                      </div>
    
                    <div class="form-group">
                        <label>Mật khẩu <span style="color: red">*</span></label>
                        <div class="col-md-12 input-group">
                            <input id="lr_password" type="password" name="PasswordHash" class="form-control"  minlength="4" maxlength="16" placeholder="Nhập mật khẩu">
                            <span class="input-group-btn"><button class="btn btn-defaultCUST" id="lr_view_button3" style=" height: 34px;padding-left: 7px;" type="button"><span class="glyphicon glyphicon-eye-open"></span>                  
                            </button></span>    
                        </div> 
                    </div>
            
                    <div class="form-group">
                        <label>Xác nhận mật khẩu <span style="color: red">*</span></label>
                        <div class="col-md-12 input-group">
                            <input id="lr_verifyPassword" type="password" name="PasswordHashConfirm" class="form-control"  minlength="4" maxlength="16" onkeyup="checkPass(); return false;" placeholder="Nhập lại mật khẩu">
                            <span class="input-group-btn"><button class="btn btn-defaultCUST" id="lr_view_button4" style=" height: 34px;padding-left: 7px;" type="button"><span class="glyphicon glyphicon-eye-open" ></span>                   
                            </button></span>          
                        </div>          
                        <span id="lr_confirmMessage" class="confirmMessage"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-primary">Thêm Luật sư</button>
                </div>
            </form>
        </div>
    </div>
</div>
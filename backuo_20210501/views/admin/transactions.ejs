<!DOCTYPE html>
<html lang="en">
  <head>
    <title> Giao dịch | Dashboard</title>

	<%- include('partials/head.ejs'); -%>
	
	<link rel="stylesheet" href="/admin/css/lawyers.css">
  </head>

  <body>

    <!-- Navbar -->
	<%- include('partials/nav.ejs'); -%>

	<!-- Breadscrumb -->
	<%- include('partials/breadcrumb.ejs', { site_name: 'Danh sách Giao dịch', edit_flag: false }); -%>

    <section id="main">
    <div class="container">
    	<div class="row">
    		<div class="col-md-12">
                <!-- Website Overview -->
                <div class="panel panel-default panel-table">
                    <div class="panel-heading main-color-bg">
                        <div class="row">
                            <div class="col col-xs-6">
                              <h3 class="panel-title">Danh sách Giao dịch</h3>
                            </div>
                            <div class="col col-xs-6 text-right">
                                <!--
                                <button type="button" class="btn btn-sm btn-primary btn-create">Tạo mới</button>
                                <button type="button" class="btn btn-sm btn-success btn-create">Chỉnh sửa</button>
                                <button type="button" class="btn btn-sm btn-danger" data-toggle="modal" data-target="#del-selected-lawyers">Xóa </button>
                                -->
                            </div>
                          </div>
                    </div>
                    <div class="panel-body">
                          <table class="table table-striped table-hover table-list" id="lawyer-panel">
                            <thead>
                                <tr id="lawyer-info-title">
                                    <!--
                                    <th>
                                        <input type="checkbox" id="parent" onclick="toggleCheckbox()">
                                    </th>
                                    -->
                                    <!-- <th class="text-center">Username</th> -->
                                    <th >
                                       Khách hàng
                                    </th>
                                    <th class="text-center">Luật sư</th>
                                    <th class="text-center">Ngày hẹn</th>
                                    <th class="text-center">Giờ hẹn</th>
                                    <th class="text-center">Thanh toán</th>
                                    <th class="text-center">Ngày giao dịch</th>
                                    <th class="text-center">Cập nhật</th>
                                    <th class="text-center"><em class="glyphicon glyphicon-cog"></em></th>
                                </tr>
                            </thead>
                            <tbody id="ll_table">
                            <!-- Print all regirsted lawyers -->
                            <% for (var i = 0; i < transaction_list.length; i++){                           
                                transaction = transaction_list[i] %> %>
                                <tr id="lawyer-info">
                                    <td>
                                        <%= transaction.ClientID; %>
                                    </td>
                                    <td>
                                        <%= transaction.LawyerID; %>
                                    </td>
                                    <td>
                                        <%= transaction.BookingDate; %>
                                    </td>
                                    <td>
                                        <%= transaction.StartTime; %>
                                    </td>
                                    <td >
                                        <% 
                                        switch(transaction.State){
                                            case '1':
                                                state = "Đã thanh toán";
                                                break;
                                            case '2':
                                                state = "Chưa thanh toán";
                                                break;
                                            case '3':
                                                state = "Đã hủy";
                                                break;    
                                            default:
                                                state = "Chưa xác định";
                                                break;
                                        }
                                        %>

                                        <select id="at_state_<%= i %>" value="2" disabled>
                                            <option value="" selected disabled hidden><%= state %></option>
                                            <option value="1"> Đã thanh toán </option>
                                            <option value="2"> Chưa thanh toán </option>
                                            <option value="3"> Đã hủy </option>
                                            <option value="0"> Chưa xác định </option>
                                        </select>

                                        
                                    </td>
                                    <td>
                                        <%= new Date(transaction.CreatedDateTime).toLocaleDateString("en-US"); %>
                                    </td>
                                    <td>
                                        <%= new Date(transaction.UpdatedDateTime).toLocaleDateString("en-US"); %>
                                    </td>

                                    <td>
                                        <a class="btn btn-default glyphicon glyphicon-pencil" href="#" onclick="changeState(<%= i %>)"></a>
                                        <a class="btn btn-default glyphicon glyphicon-floppy-save" href="#" onclick="updateState(<%= i %>)"></a>
                                    </td>
                                </tr>
                                <% }%>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>  
    </div>

    </section>

    <!-- Delete List of selected lawyers-->

	<%- include('partials/footer.ejs'); -%>

    <!-- Bootstrap core JavaScript -->
    <script src="http://cdn.ckeditor.com/4.6.2/standard/ckeditor.js"></script>
    <script>
        CKEDITOR.replace( 'editor1' );
    </script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="/admin/js/bootstrap.min.js"></script>
    <script src="/admin/js/lawyer.js"></script>
    <script src="/admin/js/dataTable.js"></script>

    <script>
        var objList = [];
        var j = 0;
        <% for (var i  = 0; i < transaction_list.length; i++) {%>
            objList[j++] = <%- JSON.stringify(transaction_list[i]) %>;
        <% } %>
        console.log(objList);
    
    </script>


    <script>

        function changeState(i){
            console.log(objList[i]);
            $('#at_state_' + i).attr('disabled', false);
        }

        function updateState(i){
            console.log(objList[i]);
            
            event.preventDefault();

            // Create Object with information from the form
            const postData = {
                State:  $('#at_state_' + i).val()
            }

            // Request to server to log-in passing the User information (userObj)

            var formURL = '/admin/transactions/' + objList[i].BookingID;
            //var formURL = 'http://api.veneris.bitiland.com/api/lawyer/' + $("#ld_username").val();
            console.log(postData);
            console.log(formURL);

            $.ajax(
            {
                url : formURL,
                type: "PUT",
                contentType: 'application/json',
                crossDomain: true,
                data : JSON.stringify(postData),
                dataType: 'json',
                //xhrFields: {
                //    withCredentials: true
                //},
                success:function(response, textStatus, request) 
                {
                    //data: return data from server
                    // alert("The server says: " + response.accessToken);
                    // console.log(request.getResponseHeader('Set-Cookie'));
                    //alert(document.cookie);
                    if (response.success === 1){
                        window.location.reload();
                    } else {
                        alert("Cập nhật thất bại");
                    }
                },
                error: function(response) 
                {
                    console.log(response);
                    alert("Cập nhật thất bại");
                    //if fails   
                    //alert('it didnt work');   
                }
            });
        };
    </script>
  </body>
</html>

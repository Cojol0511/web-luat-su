  <main id="main">

    <!--Start code-->
    <section id="lawyerDashboard">
        <div class="container-fluid">

            <div class="row mt-5">
                <div class="col-md-5 col-lg-4 col-xl-3 theiaStickySidebar">
                
                    <!-- Sidebar -->
                    <%- include('partials/user-sidebar-2.ejs'); -%>
                    <!-- /Sidebar -->

                </div>
                
                <div class="col-md-7 col-lg-8 col-xl-9">
                    <div class="card">
                        <div class="card-body">
                            
                            <!-- Profile Settings Form -->
                            <form>
                                <div class="row form-row">
                                    <div class="col-12 col-md-6">
                                        <div class="form-group">
                                            <label>Tên đăng nhập</label>
                                            <input id="cd_username" type="text" class="form-control" value="<%= user.DoB %>" disabled>
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <div class="form-group">
                                            <label>Email</label>
                                            <input id="cd_email" type="email" class="form-control" value="<%= user.Email %>" disabled>
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <div class="form-group">
                                            <label>Tên</label>
                                            <input id="cd_firstname" type="text" class="form-control" value="<%= user.FirstName %>">
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <div class="form-group">
                                            <label>Họ và tên đệm </label>
                                            <input id="cd_lastname" type="text" class="form-control" value="<%= user.LastName %>">
                                        </div>
                                    </div>

                                    <div class="col-12 col-md-6">
                                        <div class="form-group">
                                            <label>Di động</label>
                                            <input id="cd_phonenumber" type="text" value="<%= user.PhoneNumber %>" class="form-control">
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-3">
                                        <div class="form-group">
                                            <label>Năm sinh</label>
                                            <div class="cal-icon">
                                                <input id="cd_dob" type="text" class="form-control" value="<%= user.DoB %>">
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-12 col-md-3">
                                        <div class="form-group">
                                            <label>Giới tính</label>
                                            <select id="cd_gender" class="form-control select" >
                                                <option value="1">Nam</option>
                                                <option value="2">Nữ</option>
                                                <option value="0">Khác</option>
                                            </select>
                                        </div>
                                    </div> 

                                    <div class="col-12">
                                        <div class="form-group">
                                        <label>Địa chỉ</label>
                                            <input id="cd_street" type="text" class="form-control" value=" <%= user.Street %>">
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <div class="form-group">
                                            <label>Quận/Huyện</label>
                                            <input id="cd_district" t type="text" class="form-control" value="<%= user.District %>">
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <div class="form-group">
                                            <label>Tỉnh/Thành phố</label>
                                            <input id="cd_province" ttype="text" class="form-control" value="<%= user.Province %>">
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <div class="form-group">
                                            <label>Mã bưu chính</label>
                                            <input id="cd_zipcode" ttype="text" class="form-control" value="<%= user.Zipcode %>">
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <div class="form-group">
                                            <label>Quốc gia</label>
                                            <input id="cd_country" ttype="text" class="form-control" value="Việt Nam">
                                        </div>
                                    </div>
                                </div>
                                <div class="submit-section">
                                    <button id="cd_updateButton" type="button" class="btn btn-primary submit-btn">Lưu thay đổi</button>
                                    <div id="cd_message"></div>
                                </div>
                            </form>
                            <!-- /Profile Settings Form -->
                            
                        </div>
                    </div>
                </div>
            </div>

        </div>
        
    </section>
<!--end code-->


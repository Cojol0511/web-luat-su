  <script>
        $('#cd_username').val(getCookie("username")); // = getCookie("username");
        $('#cd_email').val(getCookie("email"));/// = getCookie("email");

        document.querySelector('#cd_gender [value="' + <%= user.Gender %> + '"]').selected = true;

  </script>


  <script>
         $('#cd_updateButton').click(function(event){
            event.preventDefault();

            // Create Object with information from the form
            const postData = {
                FirstName:  $("#cd_firstname").val(),
                LastName:  $("#cd_lastname").val(),
                PhoneNumber: $("#cd_phonenumber").val(),
                BirthDate: $("#cd_dob").val(),
                Gender: $("#cd_gender").val(),
                Street: $("#cd_street").val(),
                District: $("#cd_district").val(),
                Province: $("#cd_province").val(),
                Zipcode: $("#cd_zipcode").val()
            }

            // Request to server to log-in passing the User information (userObj)

            var formURL = '/user/dashboard/setting/<%= user.ClientID %>';
            // var formURL = 'http://api.veneris.bitiland.com/api/<%= user.ClientID %>'
            console.log(postData);
            console.log(formURL);

            $.ajax(
            {
                url : formURL,
                type: "PUT",
                contentType: 'application/json',
                crossDomain: true,
                data : JSON.stringify(postData),
                dataType: 'json',
                success:function(response, textStatus, request) 
                {
                    //data: return data from server
                    // alert("The server says: " + response.accessToken);
                    console.log(response);
                    cd_message.textContent = "Cập nhật thành công";
                    cd_message.style.color = "green";
                    cd_message.classList = "text-center mb-2";
                    // console.log(request.getResponseHeader('Set-Cookie'));
                    //alert(document.cookie);
                    window.location.reload();
                },
                error: function(response) 
                {
                    console.log(response);
                    cd_message.textContent = "Có lỗi xảy ra. Vui lòng thử lại.";
                    cd_message.style.display = "block";
                    cd_message.style.color = "red";
                    cd_message.classList = "text-center mb-2";
                    //alert("Phiên đăng nhập hết hạn \n Vui lòng đăng nhập lại.");
                    //window.location.href('/');
                    //if fails   
                    //alert('it didnt work');   
                }
            });
        });
  </script>

